<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_height"
    android:background="@color/white">

    <View
        android:id="@+id/bgViewHead"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!--android:background="@color/white"-->

    <TextView
        android:id="@+id/tvTitleHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#010101"
        android:textSize="@dimen/text_size_18" />

    <ImageView
        android:id="@+id/imgBackHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/default_padding"
        android:src="@drawable/ic_back" />

    <ImageView
        android:id="@+id/imgLeft2Head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_padding"
        android:layout_toRightOf="@id/imgBackHead"
        android:padding="@dimen/default_padding"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgRightHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/default_padding"
        android:padding="7dp" />

    <TextView
        android:id="@+id/tvRightHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/default_padding"
        android:padding="7dp" />

    <ImageView
        android:id="@+id/imgRight2Head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/imgRightHead"
        android:padding="7dp" />

</RelativeLayout>
