<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_15"
        android:layout_marginRight="@dimen/padding_15"
        android:layout_marginTop="@dimen/padding_15"
        android:text="请设置您的提佣密码"
        android:textColor="@color/black_6"
        android:textSize="@dimen/default_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_height"
        android:layout_marginLeft="@dimen/padding_15"
        android:layout_marginRight="@dimen/padding_15"
        android:layout_marginTop="@dimen/default_padding"
        android:background="@drawable/shape_bg_rect_frame_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtTxtPass1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:inputType="numberPassword"
            android:textSize="32sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#d8d8d8" />

        <EditText
            android:id="@+id/edtTxtPass2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:inputType="numberPassword"
            android:textSize="32sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#d8d8d8" />

        <EditText
            android:id="@+id/edtTxtPass3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:inputType="numberPassword"
            android:textSize="32sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#d8d8d8" />

        <EditText
            android:id="@+id/edtTxtPass4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:inputType="numberPassword"
            android:textSize="32sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#d8d8d8" />

        <EditText
            android:id="@+id/edtTxtPass5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:inputType="numberPassword"
            android:textSize="32sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#d8d8d8" />

        <EditText
            android:id="@+id/edtTxtPass6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:inputType="numberPassword"
            android:textSize="32sp" />
    </LinearLayout>

</LinearLayout>